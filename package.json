{
  "name": "chrome-extension-boilerplate-react-vite",
  "version": "0.0.1",
  "description": "chrome extension boilerplate",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jonghakseo/chrome-extension-boilerplate-react-vite.git"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "vitest",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write"
  },
  "type": "module",
  "dependencies": {
    "@ant-design/icons": "^5.3.6",
    "@ant-design/pro-components": "^2.7.0",
    "@ant-design/pro-form": "^2.25.1",
    "@ant-design/pro-layout": "^7.19.0",
    "@notionhq/client": "^2.2.14",
    "@uiw/react-codemirror": "^4.21.25",
    "@uiw/react-json-view": "2.0.0-alpha.23",
    "antd": "^5.16.2",
    "antd-style": "^3.6.2",
    "construct-style-sheets-polyfill": "3.1.0",
    "exifr": "^7.1.3",
    "highlight.js": "^11.9.0",
    "imgur": "^2.4.2",
    "lxgw-wenkai-webfont": "^1.7.0",
    "react": "18.2.0",
    "react-code-blocks": "^0.1.6",
    "react-dom": "18.2.0",
    "react-draggable": "^4.4.6",
    "react-json-view-preview": "^1.0.2",
    "react-router-dom": "^6.22.3",
    "vite-plugin-zip-pack": "^1.2.2",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-typescript": "11.1.6",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.263",
    "@types/node": "20.8.10",
    "@types/react": "^18.2.74",
    "@types/react-dom": "18.2.18",
    "@types/ws": "8.5.8",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.18.1",
    "@vitejs/plugin-react": "4.2.0",
    "chokidar": "3.6.0",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.2.0",
    "jsdom": "^22.1.0",
    "lint-staged": "15.2.0",
    "magic-string": "^0.30.9",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "prop-types": "^15.8.1",
    "rollup": "4.3.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "1.72.0",
    "ts-loader": "9.5.0",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "5.0.12",
    "vitest": "^1.4.0",
    "ws": "8.14.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@8.9.2",
  "keywords": [
    "novelai",
    "notion"
  ]
}
